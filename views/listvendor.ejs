<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background: #f4f4f4;
    }
    .action-btn {
      padding: 5px 10px;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }
    .edit-btn {
      background-color: #4CAF50;
      color: white;
    }
    .delete-btn {
      background-color: #f44336;
      color: white;
    }
  </style>
</head>
<body>
    <div class="section" id="vendors">
    <h2>Vendors</h2>
    <% if (vendors && vendors.length > 0) { %>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Phone</th>
              <th>Date</th>
              <th>Location</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% vendors.forEach(vendor => { %>
              <tr>
                <td><%= vendor.name %></td>
                <td><%= vendor.phone %></td>
                <td><%= vendor.date ? new Date(vendor.date).toLocaleDateString() : 'N/A' %></td>
                <td><%= vendor.location %></td>
                <td><%= vendor.createdAt ? new Date(vendor.createdAt).toLocaleDateString() : 'N/A' %></td>
                <td>
                  <a href="/vendors/edit/<%= vendor._id %>">
                    <button class="action-btn edit-btn">Edit</button>
                  </a>
                  <form action="/vendors/delete/<%= vendor._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="action-btn delete-btn" onclick="return confirm('Are you sure you want to delete this jobseeker?');">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="no-data">No vendors registered yet.</p>
    <% } %>
  </div>
</body>
</html>