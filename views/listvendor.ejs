<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Vendors</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    th {
      background: #f4f4f4;
    }
    .action-btn {
      padding: 5px 10px;
      border: none;
      cursor: pointer;
      border-radius: 4px;
    }
    .edit-btn {
      background-color: #4CAF50;
      color: white;
    }
    .delete-btn {
      background-color: #f44336;
      color: white;
    }
  </style>
</head>
<body>
  <h2>Vendors (Total: <%= vendors.length %>)</h2>

  <form method="GET" action="/vendor/list">
    <input type="text" name="search" placeholder="Search by company or contact" value="<%= search || '' %>">
    <button type="submit">Search</button>
  </form>

  <a href="/vendor/export">Export to Excel</a>

  <div class="section" id="vendors">
    <h2>Vendors</h2>
    <% if (vendors && vendors.length > 0) { %>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Contact Person</th>
              <th>Email</th>
              <th>Company Name</th>
              <th>Phone</th>
              <th>Address</th>
              <th>Services</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% vendors.forEach(vendor => { %>
              <tr>
                <td><%= vendor.contactPerson %></td>
                <td><%= vendor.email %></td>
                <td><%= vendor.companyName %></td>
                <td><%= vendor.phone %></td>
                <td><%= vendor.address %></td>
                <td><%= vendor.services.join(', ') %></td>
                <td><%= vendor.createdAt ? new Date(vendor.createdAt).toLocaleDateString() : 'N/A' %></td>
                <td>
                  <a href="/vendors/edit/<%= vendor._id %>">
                    <button class="action-btn edit-btn">Edit</button>
                  </a>
                  <form action="/vendors/delete/<%= vendor._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="action-btn delete-btn" onclick="return confirm('Are you sure you want to delete this vendor?');">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="no-data">No vendors registered yet.</p>
    <% } %>
  </div>
</body>
</html>
