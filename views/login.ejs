<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/responsive.css">

  <style>
    body {
      background: linear-gradient(135deg, #800000, #a52a2a); /* Maroon gradient */
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', sans-serif;
    }

    .login-card {
      background: #ffffff;
      border-radius: 20px;
      box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.15);
      padding: 35px;
      width: 100%;
      max-width: 420px;
      text-align: center;
    }

    .login-card img {
      width: 90px;
      margin-bottom: 15px;
    }

    .login-card h3 {
      margin-bottom: 20px;
      font-weight: 700;
      color: #800000; /* Maroon heading */
    }

    .form-label {
      font-weight: 600;
      color: #333;
      text-align: left;
      display: block;
    }

    .form-control {
      border-radius: 10px;
    }

    .btn-custom {
      background-color: #800000;
      color: white;
      font-weight: 600;
      border-radius: 10px;
      padding: 10px;
      transition: 0.3s ease;
    }

    .btn-custom:hover {
      background-color: #a52a2a;
      color: #fff;
    }

    /* Eye button styling inside input */
    .input-group .btn-eye {
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
      border: 1px solid #ced4da;
      background: transparent;
      padding: 0.45rem 0.6rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .input-group .btn-eye:focus {
      box-shadow: none;
      outline: 2px solid rgba(128,0,0,0.15);
    }

    .icon {
      width: 20px;
      height: 20px;
      display: inline-block;
    }
  </style>
</head>
<body>

  <div class="login-card">
    <!-- Logo -->
    <img src="/images/logo.png" alt="Logo">

    <!-- Title -->
    <h3>Login</h3>

    <!-- Form -->
    <form action="/welcome/admin" method="post" autocomplete="on">
      <div class="mb-3 text-start">
        <label for="username" class="form-label">Username</label>
        <input 
          type="text" 
          class="form-control" 
          id="username" 
          name="username" 
          placeholder="Enter your username" 
          required>
      </div>

      <div class="mb-3 text-start">
        <label for="password" class="form-label">Password</label>

        <!-- Input group with eye button -->
        <div class="input-group">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Enter your password"
            aria-describedby="togglePassword"
            required
          />

          <!-- Accessible button to toggle visibility -->
          <button
            type="button"
            id="togglePassword"
            class="btn btn-eye"
            aria-label="Show password"
            title="Show password"
            aria-pressed="false"
          >
            <!-- Eye icon (visible) -->
            <svg id="eyeIcon" class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z" stroke="#333" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="12" cy="12" r="3" stroke="#333" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>

            <!-- Eye-off icon (hidden by default) -->
            <svg id="eyeOffIcon" class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" style="display:none;">
              <path d="M17.94 17.94A10.94 10.94 0 0 1 12 19c-7 0-11-7-11-7 .9-1.6 2.2-3.02 3.7-4.17" stroke="#333" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M3 3l18 18" stroke="#333" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </div>
      </div>

      <button type="submit" class="btn btn-custom w-100">Login</button>
    </form>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Password show/hide toggle
    (function () {
      const pwd = document.getElementById('password');
      const toggle = document.getElementById('togglePassword');
      const eye = document.getElementById('eyeIcon');
      const eyeOff = document.getElementById('eyeOffIcon');

      toggle.addEventListener('click', function () {
        const currentlyHidden = pwd.type === 'password';
        // Toggle input type
        pwd.type = currentlyHidden ? 'text' : 'password';

        // Toggle aria-pressed for accessibility
        toggle.setAttribute('aria-pressed', String(currentlyHidden));

        // Update aria-label & title
        toggle.setAttribute('aria-label', currentlyHidden ? 'Hide password' : 'Show password');
        toggle.setAttribute('title', currentlyHidden ? 'Hide password' : 'Show password');

        // Swap icons
        if (currentlyHidden) {
          eye.style.display = 'none';
          eyeOff.style.display = 'inline-block';
        } else {
          eye.style.display = 'inline-block';
          eyeOff.style.display = 'none';
        }
      });

      // optional: allow toggling by pressing Enter/Space when focused
      toggle.addEventListener('keydown', function (e) {
        if (e.key === ' ' || e.key === 'Enter') {
          e.preventDefault();
          toggle.click();
        }
      });
    })();
  </script>
</body>
</html>
