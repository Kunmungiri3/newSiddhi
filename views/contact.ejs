    /* Active link glow */
.navbar-nav .nav-link.active {
  color: #fff !important;
  background: var(--maroon);
  border-radius: 6px;
  padding: 6px 14px;
  box-shadow: 0 0 12px rgba(128,0,0,0.6);
  transition: 0.3s;
}

/* Button ripple effect */
.contact-form button {
  background: var(--maroon);
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 12px;
  font-weight: 600;
  overflow: hidden;
  position: relative;
}
.contact-form button::after {
  content: "";
  position: absolute;
  top: 50%; left: 50%;
  width: 0; height: 0;
  background: rgba(255,255,255,0.4);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: width 0.6s ease, height 0.6s ease, opacity 0.6s ease;
}
.contact-form button:active::after {
  width: 300%; height: 300%;
  opacity: 0;
  transition: 0s;
}
    .text-maroon { color: var(--maroon) !important; }
    .bg-maroon { background: var(--maroon) !important; color: white
  !important; }
      
      
  /* Floating animation for contact form */
.contact-form .card {
  animation: floatBox 6s ease-in-out infinite;
}

@keyframes floatBox {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8px); }
}

    /* Hero */
    .hero {
      background: linear-gradient(135deg, var(--maroon), #a00000);
      color: white;
      text-align: center;
      padding: 80px 20px;
      position: relative;
      overflow: hidden;
    }
