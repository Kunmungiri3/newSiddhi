    }
    .hero::before, .hero::after {
      content: "";
      position: absolute;
      border-radius: 50%;
      background: rgba(255,255,255,0.1);
      animation: float 8s infinite ease-in-out;
    }
    .hero::before { width: 150px; height: 150px; top: 20px; left: 20px; }
    .hero::after { width: 200px; height: 200px; bottom: -40px; right: 30px; }
    @keyframes float {
