    body {
      font-family: 'Poppins', sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 0;
    }

    /* Navbar */
    .navbar {
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    .navbar-brand img {
      height: 60px;
    }

    /* Hero Section */
    .hero {
      background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)),
        url("https://images.unsplash.com/photo-1531297484001-80022131f5a1") center/cover no-repeat;
      color: #fff;
      text-align: center;
      padding: 120px 20px;
      margin-top: 70px; /* offset for fixed navbar */
      position: relative;
    }
    .hero h1 {
      font-size: 2.5rem;
      font-weight: 600;
      animation: fadeInDown 1s ease;
    }
    .hero p {
      font-size: 1.2rem;
      margin-bottom: 30px;
      animation: fadeInUp 1.2s ease;
    }
    .hero .btn-red {
      background: #d91c1c;
      color: #fff;
      font-weight: 600;
      padding: 12px 28px;
      border-radius: 8px;
      transition: all 0.3s;
    }
    .hero .btn-red:hover {
      background: #a81616;
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(0,0,0,0.3);
    }

    /* Form Section */
    .form-section {
      margin-top: -40px;
      margin-bottom: 60px;
    }
    .form-container {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
      padding: 40px;
      animation: fadeIn 1s ease-in-out;
    }
    .form-container h2 {
      color: #d91c1c;
      margin-bottom: 20px;
      font-size: 1.8rem;
      font-weight: 600;
      position: relative;
    }
    .form-container h2::after {
      content: "";
      width: 60px;
      height: 3px;
      background: #d91c1c;
      display: block;
      margin-top: 8px;
      border-radius: 2px;
    }

    /* Inputs */
    .form-control {
      transition: all 0.3s ease;
    }
    .form-control:hover,
    .form-control:focus {
      transform: scale(1.02);
      border-color: #d91c1c;
      box-shadow: 0 0 10px rgba(217,28,28,0.2);
    }

    /* Animations for form fields */
    .form-container .row > div {
      opacity: 0;
      transform: translateY(20px);
      animation: fadeInUp 0.6s forwards;
    }
    .form-container .row > div:nth-child(1) { animation-delay: 0.1s; }
    .form-container .row > div:nth-child(2) { animation-delay: 0.2s; }
    .form-container .row > div:nth-child(3) { animation-delay: 0.3s; }
    .form-container .row > div:nth-child(4) { animation-delay: 0.4s; }
    .form-container .row > div:nth-child(5) { animation-delay: 0.5s; }
    .form-container .row > div:nth-child(6) { animation-delay: 0.6s; }
    .form-container .row > div:nth-child(7) { animation-delay: 0.7s; }
    .form-container .row > div:nth-child(8) { animation-delay: 0.8s; }
    .form-container .row > div:nth-child(9) { animation-delay: 0.9s; }

