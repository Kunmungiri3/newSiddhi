<nav class="navbar navbar-expand-lg fixed-top navbar-light">
  <div class="container">
    <a class="navbar-brand" href="/"><img src="/newlogo.png" alt="Siddhi Infonet official company logo" loading="lazy"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navMenu">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/About.html">About</a></li>
        <li class="nav-item"><a class="nav-link" href="/Services.html">Services</a></li>
        <li class="nav-item"><a class="nav-link" href="/gallery.html">Gallery</a></li>
        <li class="nav-item"><a class="nav-link" href="/news.html">News</a></li>
        <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
        <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
        <li class="nav-item"><a class="btn btn-red ms-lg-3" href="/register">Get in Touch</a></li>
      </ul>
    </div>
  </div>
</nav>

<!-- Hero Section -->
