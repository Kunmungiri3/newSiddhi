<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Jobseeker List - Siddhi Infonet</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- DataTables -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #fdfdfd;
      color: #333;
    }
    .navbar {
      background: #800000;
    }
    .navbar-brand img {
      height: 50px;
    }
    h2 {
      color: #800000;
      margin: 30px 0;
      font-weight: 600;
      text-align: center;
    }
    .dataTables_wrapper .dataTables_filter input {
      border-radius: 8px;
      border: 1px solid #ccc;
      padding: 6px;
    }
    table.dataTable thead th {
      background: #800000;
      color: #fff;
    }
    .btn-view, .btn-download {
      background: #800000;
      color: #fff;
      border: none;
      padding: 5px 10px;
      border-radius: 6px;
      font-size: 0.8rem;
    }
    .btn-view:hover, .btn-download:hover {
      background: #a00000;
    }
    .dt-buttons .btn {
      background: #800000 !important;
      color: #fff !important;
      border: none !important;
      border-radius: 6px !important;
      margin-right: 8px;
    }
    .dt-buttons .btn:hover {
      background: #a00000 !important;
    }
  </style>
</head>
<body>

  <!-- Navbar with Logo -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/newlogo.png" alt="Siddhi Infonet Logo">
      </a>
    </div>
  </nav>

  <div class="container">
    <h2>Jobseekers</h2>

    <% if (jobseekers && jobseekers.length > 0) { %>
      <div class="table-responsive">
        <table id="jobseekerTable" class="table table-striped table-bordered align-middle">
          <thead>
            <tr>
              <th>Name</th>
              <th>Father's Name</th>
              <th>Phone</th>
              <th>Email</th>
              <th>DOB</th>
              <th>Qualification</th>
              <th>Address</th>
              <th>Aadhar</th>
              <th>CV</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% jobseekers.forEach(jobseeker => { %>
              <tr>
                <td><%= jobseeker.name %></td>
                <td><%= jobseeker.father %></td>
                <td><%= jobseeker.phone %></td>
                <td><%= jobseeker.email %></td>
                <td><%= jobseeker.dob %></td>
                <td><%= jobseeker.qualification %></td>
                <td><%= jobseeker.address %></td>
                <td><%= jobseeker.aadhar %></td>
                <td>
                  <% if (jobseeker.cv) { %>
                    <a href="<%= jobseeker.cv %>" target="_blank" class="btn btn-view">View</a>
                    <a href="<%= jobseeker.cv %>" download class="btn btn-download">Download</a>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td><%= jobseeker.createdAt ? new Date(jobseeker.createdAt).toLocaleDateString() : 'N/A' %></td>
                <td>
                  <a href="/jobseekers/edit/<%= jobseeker._id %>" class="btn btn-success btn-sm">Edit</a>
                  <form action="/jobseekers/delete/<%= jobseeker._id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this jobseeker?');">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p class="text-center text-muted">No jobseekers registered yet.</p>
    <% } %>
  </div>

  <!-- JS -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/dataTables.buttons.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.bootstrap5.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.html5.min.js"></script>
  <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

  <script>
    $(document).ready(function() {
      $('#jobseekerTable').DataTable({
        dom: 'Bfrtip',
        buttons: [
          { 
            extend: 'excelHtml5', 
            text: 'Export Excel',
            exportOptions: {
              columns: ':visible',
              format: {
                body: function (data, row, column, node) {
                  // If column is CV column, export as link
                  if (column === 8) {
                    var link = $(data).filter('a').attr('href');
                    return link ? link : 'N/A';
                  }
                  return data;
                }
              }
            }
          },
          { 
            extend: 'pdfHtml5', 
            text: 'Export PDF',
            exportOptions: {
              columns: ':visible',
              format: {
                body: function (data, row, column, node) {
                  if (column === 8) {
                    var link = $(data).filter('a').attr('href');
                    return link ? link : 'N/A';
                  }
                  return data;
                }
              }
            }
          },
          { extend: 'print', text: 'Print' }
        ],
        pageLength: 10
      });
    });
  </script>
</body>
</html>
